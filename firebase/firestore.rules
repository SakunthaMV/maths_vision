rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /Full%20Past%20Papers%20and%20Marking%20Schemes/{document=**} {
      allow read: if true;
      allow write: if true;
    }
    match /Past%20Papers%20and%20Marking%20Schemes/{document=**} {
    	allow read: if true;
      allow write: if false;
    }
    match /Papers/{document=**} {
    	allow read: if true;
      allow write: if false;
    }
    match /Users/{user}{
    	allow read, create, update, delete: if request.auth != null;
    }
    match /Events/{document=**}{
    	allow read, create, update: if request.auth != null;
      allow delete: if false;
    }
    match /Users/{user}/Trigonometry_Event/{document=**} {
      allow read, create, update, delete: if request.auth != null;
    }
    match /Test_Users/{document=**}{
    	allow read, create, update: if request.auth != null;
      allow delete: if false;
    }
    match /Test_Events/{document=**}{
    	allow read, create, update: if request.auth != null;
      allow delete: if false;
    }
  }
}